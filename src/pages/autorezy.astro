<body>
  <div id="controls">
    <input type="text" id="searchQuery" placeholder="What are you looking for?" />
    <button onclick="handleSearch()">Search</button>
  </div>
  <div id="map"></div>
  <script src="script.js"></script>
</body>
</html>
